---
const buttonProps = {
  "data-state": "playing",
  class: "play",
};

const svgProps = {
  xmlns: "http://www.w3.org/2000/svg",
  viewBox: "0 -960 960 960",
  height: "24",
  width: "24",
};

const pauseSvgProps = {
  ...svgProps,
  class: "paused",
};

const playSvgProps = {
  ...svgProps,
  class: "playing",
};
---

<button {...buttonProps}>
  <svg {...pauseSvgProps}>
    <path d="M560-200v-560h160v560H560Zm-320 0v-560h160v560H240Z"></path>
  </svg>
  <svg {...playSvgProps}><path d="M320-200v-560l440 280-440 280Z"></path></svg>
</button>

<style lang="scss">
  @import "~styles/mixins";

  .play {
    @include gallery-button;
  }

  .play[data-state="playing"] {
    svg.playing {
      display: none;
    }
  }

  .play[data-state="paused"] {
    svg.paused {
      display: none;
    }
  }
</style>
