---
let { color, style = "solid", size, primary } = Astro.props;

if (!color) {
  style = "outline";
  color = primary;
}

if (color == "red") color = "darkred";
---

<div class:list={["label", style, size]}>
  <slot />
</div>

<style lang="scss" define:vars={{ color }}>
  @import "~styles/mixins";

  .label {
    border-radius: $border-radius-sm;
    font-size: $h6-font-size;
    display: inline-block;
    border: 1px solid;
    padding: 0.5rem;
    margin: 0.25rem;
    line-height: 1;
  }

  .label.sm {
    font-size: 0.875rem;
    padding: 0.375rem;
  }

  .label.solid {
    background-color: var(--color);
    border-color: var(--color);
    color: white;
  }

  .label.outline {
    border-color: currentColor;
    background-color: white;
    color: var(--color);
  }
</style>
