---
import Skiplink from "~components/Skiplink.astro";

const { title, state, class: className, group } = Astro.props;

const outerProps = {
  class: "outer " + className,
  id: "window_" + title,
  "data-group": group,
  "data-state": state,
};

const innerProps = {
  class: "inner",
};
---

<div {...outerProps}>
  <Skiplink />
  <div {...innerProps}>
    <slot />
  </div>
</div>

<style lang="scss">
  @import "~styles/mixins";

  .outer {
    position: absolute;
    display: none;
    width: 16rem;
  }

  .outer[data-state="open"] {
    display: block;
  }

  .inner {
    border-radius: $border-radius-lg;
    box-shadow: $box-shadow-window;
    background-color: white;
    font-size: 1.125rem;
    overflow: hidden;
    color: black;
  }
</style>
