---
import Folder from "~components/Desktop/Folder.astro";
---

<div class="position">
  <Folder {...Astro.props} />
</div>

<style lang="scss">
  @import "~styles/mixins";

  .position {
    @include position-folder;

    @include medium-up {
      right: toRem(20);
      top: toRem(10);
    }
  }

  .position[data-count="1"] {
    @include medium-up {
      right: toRem(40);
      top: toRem(20);
    }
  }
</style>
