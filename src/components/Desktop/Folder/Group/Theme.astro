---
import GroupFolder from "~components/Desktop/Folder/Group.astro";
import { toRem } from "~scripts/helpers";

const { group } = Astro.props;

const { label } = group[0];

const window = {
  topbar: {
    label,
  },
  style: {
    width: toRem(124),
  },
};

const folderProps = {
  window,
  group,
  label,
};
---

<GroupFolder {...folderProps} class="position" />

<style lang="scss">
  @import "~styles/mixins";

  .position {
    @include position-folder;

    @include medium-up {
      right: toRem(100);
      top: toRem(100);
    }
  }

  .position[data-move="true"] {
    @include medium-up {
      right: toRem(60);
      top: toRem(170);
    }
  }
</style>
