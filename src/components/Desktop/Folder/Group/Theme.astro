---
import GroupFolder from "~components/Desktop/Folder/Group.astro";
import { toRem } from "~scripts/helpers";

const { group } = Astro.props;

const { label } = group[0];

const width = toRem(124);

const folderProps = {
  width,
  group,
  label,
};
---

<GroupFolder {...folderProps} class="position" />

<style lang="scss">
  @import "~styles/mixins";

  .position {
    @include position-folder;

    @include medium-up {
      @include desktop-grid(3, 4);
    }
  }
</style>
