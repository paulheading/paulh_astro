---
import SingleFolder from "~components/Desktop/Folder/Single.astro";
---

<SingleFolder {...Astro.props[0]} class="position" />

<style lang="scss">
  @import "~styles/mixins";

  .position {
    @include position-folder;

    @include medium-up {
      right: toRem(20);
      top: toRem(10);
    }
  }

  .position[data-move="true"] {
    @include medium-up {
      right: toRem(40);
      top: toRem(20);
    }
  }
</style>
