import Wifi from "~Topbar/Wifi";
import Time from "~Topbar/Time";
---

<div id="topbar" class="container">
  <div class="wrap">
    <Location />
    <Wifi />
    <Time />
  </div>
</div>

<style lang="scss">
  @use "~mixins" as *;

  .container {
    border-bottom: 0.25rem $c-teal--xdark solid;
    background-color: $c-teal--dark;
    justify-content: center;
    color: $c-teal--xxdark;
    align-items: center;
    padding: 0.5rem;
    display: flex;
  }

  .wrap {
    display: inline-flex;
    align-items: center;
  }
</style>
