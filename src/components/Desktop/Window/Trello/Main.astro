---
import { projects } from "~data/layout.json";
import Card from "#trello/card";

let { cards } = projects;
---

<main>
  {
    cards.map(function (project, index) {
      const props = project;

      if (index >= 2) props.style = { display: "none" };

      return <Card {...props} />;
    })
  }
</main>
