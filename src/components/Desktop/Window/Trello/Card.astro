---
import Label from "~components/Label.astro";

const { name, local, labels } = Astro.props;

const primary = labels[0].color;

const anchorProps = {
  class: "container",
  href: local.url,
};
---

<a {...anchorProps}>
  {name}
  <div class="labels">
    {
      labels.map(function ({ name, color }, index) {
        const props = {
          size: "sm",
          color,
        };

        if (index > 0) {
          props.style = "outline";
          props.color = primary;
        }

        return <Label {...props}>{name}</Label>;
      })
    }
  </div>
</a>

<style lang="scss">
  @import "~styles/mixins";

  .container {
    box-shadow: 0 0.125rem $c-trello-text;
    background-color: white;
    padding: 0.5rem 0.75rem;
    border-radius: 0.25rem;
    overflow: hidden;
    display: block;

    + .container {
      margin-top: $padding-trello;
    }

    @include focus {
      @include single-box($c-trello-text, 0.1875rem);
      z-index: inherit;
    }
  }

  .labels {
    $margin: 0.25rem;

    margin-right: -$margin;
    margin-left: -$margin;
    margin-top: $margin;
  }
</style>
