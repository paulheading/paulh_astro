---
import WindowOuter from "~components/Desktop/Window/Outer.astro";
import WindowInner from "~components/Desktop/Window/Inner.astro";
import Header from "~components/Desktop/Window/Spotify/Header.astro";
import Main from "~components/Desktop/Window/Spotify/Main.astro";

const { name } = Astro.props;
---

<WindowOuter {...Astro.props} class="outer">
  <WindowInner class="inner">
    <Header year={name} />
    <Main year={name} />
  </WindowInner>
</WindowOuter>

<style lang="scss">
  @import "~styles/mixins";

  .outer {
    left: toRem(64);
    top: toRem(32);
  }

  .inner {
    background-color: black;
    color: white;
  }
</style>
