---
import WindowOuter from "~Window/Outer";
import WindowInner from "~Window/Inner";
import Header from "~Window/Spotify/Header";
import Main from "~Window/Spotify/Main";

const { name } = Astro.props;
---

<WindowOuter {...Astro.props} class="outer">
  <WindowInner class="inner">
    <Header year={name} />
    <Main year={name} />
  </WindowInner>
</WindowOuter>

<style lang="scss">
  @import "~styles/mixins";

  .outer {
    left: toRem(64);
    top: toRem(32);
  }

  .inner {
    background-color: black;
    color: white;
  }
</style>
