---
import WindowOuter from "~Window/Outer";
import WindowInner from "~Window/Inner";
import ThemeContent from "~Window/Theme/Content";
import { themes } from "~data/layout.json";

const { name } = Astro.props;
---

<WindowOuter {...Astro.props} class="outer">
  <WindowInner>
    <ThemeContent {...themes[name]} />
  </WindowInner>
</WindowOuter>

<style lang="scss">
  @use "~mixins" as *;

  .outer {
    left: toRem(128);
    top: toRem(160);
  }
</style>
