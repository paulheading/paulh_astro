---
import WindowOuter from "~components/Desktop/Window/Outer.astro";
import WindowInner from "~components/Desktop/Window/Inner.astro";
import ThemeContent from "~components/Desktop/Window/Theme/Content.astro";
import { themes } from "~data/layout.json";

const { name } = Astro.props;
---

<WindowOuter {...Astro.props} class="outer">
  <WindowInner>
    <ThemeContent {...themes[name]} />
  </WindowInner>
</WindowOuter>

<style lang="scss">
  @import "~styles/mixins";

  .outer {
    left: toRem(128);
    top: toRem(160);
  }
</style>
