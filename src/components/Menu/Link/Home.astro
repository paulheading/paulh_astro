---
import MenuLink from "~Menu/Link";
import { LargePaully, SmallPaully } from "paully/svgs";
---

<MenuLink class="home">
  <LargePaully slot="desktop" className="logo" />
  <SmallPaully slot="mobile" className="logo" />
</MenuLink>

<style lang="scss">
  @use "~mixins" as *;

  .home {
    display: block;
  }

  .logo[data-focus] {
    display: none;
  }

  a.home {
    @include focus {
      .logo[data-focus] {
        display: initial;
      }
      .logo[data-default] {
        display: none;
      }
    }
  }
</style>
