---
const mode = Astro.url.pathname == "/" ? "home" : "away";

const menuOuterProps = {
  "class:list": ["menu-outer", mode],
  id: "menu",
};
---

<div {...menuOuterProps}>
  <div class="wrap">
    <slot />
  </div>
</div>

<style lang="scss">
  @use "~mixins" as *;
  @use "sass:map";

  .menu-outer {
    min-width: $min-width-site;
    padding-right: $gap-links;
    padding-left: $gap-links;

    @include small-down {
      border-bottom: $border-banner;
      border-top: $border-banner;

      .wrap {
        height: $height-banner;
      }
    }

    @include small-up {
      padding: 2.5rem 2rem;
    }
  }

  .menu-outer.home {
    @include small-up {
      position: absolute;
      z-index: 999;
      width: 100%;
      left: 0;
      top: 0;
    }
  }

  @each $key, $value in $heroes {
    .menu-outer.home[data-loop="#{$key}"] {
      @include small-down {
        background-color: map.get($value, banner);
      }
    }
  }

  .menu-outer.away {
    @include small-down {
      background-color: $c-body-banner;
    }
  }

  .wrap {
    @include wrap;
    @include flex-links;
    justify-content: center;

    @include medium-down {
      position: relative;
      left: -0.375rem;
    }

    @include small-up {
      justify-content: space-between;
    }
  }
</style>
