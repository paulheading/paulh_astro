---
import Layout from "~layouts/Page.astro";

import { articles } from "~data/layout.json";
import { helpers } from "paully";

export function getStaticPaths() {
  return helpers.get.StaticPaths(articles.cards);
}

const { name, local } = Astro.props;

const back = {
  href: "/blog",
  title: "Blog",
};

const layout = {
  title: "Paul Heading | Blog | " + name,
  description: local.summary,
};

const props = {
  layout,
  local,
  back,
};
---

<Layout {...props} />
