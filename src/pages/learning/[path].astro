---
import { parse } from "node-html-parser";

import Layout from "~layouts/Main.astro";
import Content from "~components/Content.astro";
import Page from "~components/Page.astro";
import Row from "~components/Page/Row.astro";
import Back from "~components/Anchor/Back.astro";

import { learning } from "~data/resume.json";
import { get } from "~scripts/helpers";

export function getStaticPaths() {
  return get.StaticPaths(learning);
}

interface local {
  summary: string;
  sections: [string];
  pathname: string;
}

interface props {
  name: string;
  local: local;
}

export type { local, props };

const { name, local }: props = Astro.props;

const layoutProps = {
  title: "Paul Heading | Learning | " + name,
  description: local.summary,
};
---

<Layout {...layoutProps}>
  <Content>
    <Page>
      {
        local.sections.map((section) => (
          <Row content={{ padding: true }}>{parse(section)}</Row>
        ))
      }
    </Page>
    <div class="wrap-back">
      <Back>Resume</Back>
    </div>
  </Content>
</Layout>

<style lang="scss">
  @import "~styles/mixins";

  .wrap-back {
    margin-top: $padding-row * 2;
  }
</style>
