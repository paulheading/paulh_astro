---
import Layout from "~layouts/Page.astro";

import { roles } from "~data/resume.json";
import { get } from "~scripts/helpers";

export function getStaticPaths() {
  return get.StaticPaths(roles.cards);
}

const { name, local } = Astro.props;

const back = {
  href: "/resume",
  title: "Resume",
};

const layout = {
  title: "Paul Heading | Role | " + name,
  description: local.summary,
};

const props = {
  layout,
  local,
  back,
};
---

<Layout {...props} />
