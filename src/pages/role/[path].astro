---
import Layout from "~layouts/Page.astro";

import { roles } from "~data/resume.json";
import { get, create } from "~scripts/helpers";
import galleries from "~data/galleries";

export function getStaticPaths() {
  return get.StaticPaths(roles);
}

const { name, local } = Astro.props;

const back = {
  href: "/resume",
  title: "Resume",
};

const layout = {
  title: "Paul Heading | Role | " + name,
  description: local.summary,
};

const filename = create.filename(local.pathname);

const gallery = galleries[filename];

const props = {
  layout,
  local,
  gallery,
  back,
};
---

<Layout {...props} />
