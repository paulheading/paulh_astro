---
import Layout from "~layouts/Page.astro";

import { articles } from "~data/layout.json";
import { get } from "~scripts/helpers";

export function getStaticPaths() {
  return get.StaticPaths(articles.cards);
}

const { name, local } = Astro.props;

const back = {
  href: "/articles",
  title: "Articles",
};

const layout = {
  title: "Paul Heading | Article | " + name,
  description: local.summary,
};

const props = {
  layout,
  local,
  back,
};
---

<Layout {...props} />
